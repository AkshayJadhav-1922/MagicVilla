@model MagicVilla_Web.Models.VM.VillaNumberDeleteVM

<form asp-action="DeleteVillaNumber">
    <br />
    <div class="container border p-3">
        <h2 class="text-primary">Delete Villa</h2>
        <hr />

        <div class="row">
            <div class="col-2">
                <label asp-for="villaNumber.VillNo" class="control-lable pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="villaNumber.VillNo"  readonly class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="villaNumber.VillId" class="control-lable pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="villaNumber.VillId" readonly class="form-select" asp-items="@Model.villaList">
                    <option disabled selected>--Select Villa--</option>
                </select>
            </div>
            <div class="col-2">
                <label asp-for="villaNumber.SpecialDetails" class="control-lable pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="villaNumber.SpecialDetails" readonly class="form-control" rows="4"></textarea>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="IndexVillaNumber" asp-controller="VillaNumber" class="btn btn-primary form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}